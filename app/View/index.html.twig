<div class="form-block">
    <div style="text-align: center;">
        <h4>Список задач</h4>
    </div>
    <div id="tasks">
        {{ include('tasks_list.html.twig', { 'count': count, 'tasks': tasks, 'pages': pages, 'sort': sort }) }}
    </div>
</div>

<div class="form-block">
    <div style="text-align: center;"><h4 class="center">Создать новую задачу</h4></div>
    <form id="addTask">
        <div class="form-group row">
            <label for="taskName" class="col-sm-2 col-form-label">Название задачи:</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Введите название задачи" id="taskName" name="task_name" class="form-control">
                <div class="invalid-feedback">Введите название задачи</div>
            </div>
        </div>
        <div class="form-group row">
            <label for="userName" class="col-sm-2 col-form-label">Имя пользователя:</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Введите имя пользователя" id="userName" name="user_name" class="form-control">
                <div class="invalid-feedback">Введите имя пользователя</div>
            </div>
        </div>
        <div class="form-group row">
            <label for="userEmail" class="col-sm-2 col-form-label">E-mail:</label>
            <div class="col-sm-10">
                <input type="email" placeholder="Введите e-mail" id="userEmail" name="email" class="form-control">
                <div class="invalid-feedback">e-mail некорректен</div>
            </div>

        </div>

        <div class="form-group">
            <label for="taskText">Текст задачи:</label>
            <textarea class="form-control" id="taskText" name="task_text" rows="3"></textarea>
            <div class="invalid-feedback">Введите текст задачи</div>
        </div>
        <button type="button" id="createTask" class="btn btn-primary">Создать</button>
    </form>
</div>


