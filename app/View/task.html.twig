{% if login == true %}
    {% set disabled='' %}
{% else %}
    {% set disabled='disabled' %}
{% endif %}
<div>
    <h4 class="center">Задача "{{ task.name }}"</h4>
    <form id="editForm">
        <div class="form-group row">
            <label for="taskName" class="col-sm-2 col-form-label">Название задачи:</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Введите название задачи" id="taskName" name="task_name" class="form-control" value="{{ task.name }}" {{ disabled }}>
            </div>
        </div>
        <div class="form-group row">
            <label for="userName" class="col-sm-2 col-form-label">Имя пользователя:</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Введите имя пользователя" id="userName" name="user_name" class="form-control" value="{{ task.user }}" {{ disabled }}>
            </div>
        </div>
        <div class="form-group row">
            <label for="userEmail" class="col-sm-2 col-form-label">E-mail:</label>
            <div class="col-sm-10">
                <input type="email" placeholder="Введите e-mail" id="userEmail" name="email" class="form-control" value="{{ task.email }}" {{ disabled }}>
            </div>
        </div>

        <div class="form-group row">
            <label for="status" class="col-sm-2 col-form-label">Статус:</label>
            <div class="col-sm-10">
                <select id="status" class="custom-select" name="status" {{ disabled }}>
                    <option value="0" {% if task.status == false %} selected {% endif %}>В работе</option>
                    <option value="1" {% if task.status == true %} selected {% endif %}>Выполнено</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="taskText">Текст задачи:</label>
            <textarea class="form-control" id="taskText" name="task_text" rows="3" {{ disabled }}>{{ task.text }}</textarea>
        </div>
        <input type="hidden" name="task_id" value="{{ task.id }}">
        <button type="button" id="editTask" class="btn btn-primary" {{ disabled }}>Редактировать</button>
    </form>
</div>
